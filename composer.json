{
	"name": "lasallecms/lasallecms",
	"description": "LaSalle Content Management System flagship app.",
	"homepage": "http://lasallecms.com",
	"keywords": ["laravel", "laravel5", "blog", "content", "cms", "LaSalleCMS", "South LaSalle", "Bob Bloom"],
	"license": "GPL-3.0",
	"type": "project",
	"authors": [
        {
            "name": "Bob Bloom",
            "email": "info@southlasalle.com",
            "role": "Developer",
            "homepage": "http://southlasalle.com"
        }
    ],

	"require": {
        "php": ">=5.5.0",
		"laravel/framework": "5.0.*",
		"guzzlehttp/guzzle": "~4.0",
		"laravelcollective/html": "~5.0",
		"lasallecms/usermanagement": "dev-master",
		"lasallecms/lasallecmsapi": "dev-master",
		"lasallecms/lasallecmsadmin": "dev-master",
		"lasallecms/lasallecmsfrontend": "dev-master",
		"lasallecms/helpers": "dev-master"
	},
	"require-dev": {
		"phpunit/phpunit": "~4.0",
		"phpspec/phpspec": "~2.1",
		"barryvdh/laravel-debugbar": "~2.0",
		"laracasts/testdummy": "~2.0"
	},
	"autoload": {
		"classmap": [
			"plumbing/database",
			"plumbing/database/seeds"
		],
		"psr-4": {
			"App\\": "app/"
		}
	},
	"autoload-dev": {
		"classmap": [
			"tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php -r \"copy('.env.example', '.env');\"",
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "dev"
}
